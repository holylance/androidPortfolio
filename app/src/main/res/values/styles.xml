<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/control_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/danger_background_primary</item>
        <item name="colorControlNormal">@color/control_active</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/euclid_square_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/euclid_square_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/background_navigation</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/shadow</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/shadow</item>
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="titleTextAppearance">@style/TextAppearance.NavbarTitle</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.TableRowSubTitle</item>
    </style>

</resources>
