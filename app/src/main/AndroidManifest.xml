<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.androidportfolio">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:screenOrientation="portrait"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".LauncherActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".lobby.LobbyActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".myCareers.MyCareersActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".recycleview.RecycleViewBasicActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".InstanceStateActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".recycleview.ListItemActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".scrollviewwithkeyboard.ScrollviewWithKeyboardActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden"/>
    <activity
        android:name=".staggeredgridcolors.StaggeredGridColorsActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".weatherHttpResopnse.WeatherHttpResponseActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
  </application>

</manifest>